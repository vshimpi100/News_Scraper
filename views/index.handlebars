<div id="main">
  <div class="jumbotron text-center">
    <h1>News Scraper</h1>
  </div>
  <div class="container">
    <div class="row text-center">
      <h3>Stories:</h3>
    </div>
    <div class="row">
      {{#each articles}}
      <div class="card col-12">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text" style="width:100%;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">{{this.story}}</p>
          <a href="/articles/{{this._id}}" class="btn btn-primary">See Article</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="app.js"></script>